<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/tuit_form' %>
      </section>
    </aside>
    <div class="span8">
      <h3>Timeline</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center hero-unit">
    <h1>Bienvenido a Tuiter</h1>

    <h2>
      Subtitulo
    </h2>

    <%= link_to "Ingresa ahora!", signup_path,
                                class: "btn btn-large btn-primary" %>
  </div>

<% end %>